{
  "name": "music-box-for-adventurer",
  "version": "0.1.0",
  "scripts": {
    "dev": "vite",
    "build": "pnpm build:polyfill && vite build",
    "build:polyfill": "esbuild --bundle --outfile=./public/polyfill.js --minify ./polyfills/polyfill.js",
    "serve": "vite preview",
    "lint": "eslint './src/**/*.{ts,vue}'",
    "lint:fix": "eslint './src/**/*.{ts,vue}' --fix && prettier --write './src/**/*.{ts,vue}'",
    "preinstall": "npx only-allow pnpm",
    "prebuild": "test \"$CI\" = true && npx pnpm install --store=node_modules/.pnpm-store || echo skiping pnpm install"
  },
  "dependencies": {
    "audio-metadata": "^0.3.0",
    "buffer": "^6.0.3",
    "chroma-js": "^2.1.1",
    "konva": "^7.2.5",
    "localforage": "^1.9.0",
    "music-metadata-browser": "^2.2.6",
    "vue": "^3.0.11",
    "xxhash-wasm": "^0.4.1"
  },
  "devDependencies": {
    "@types/chroma-js": "^2.1.3",
    "@typescript-eslint/eslint-plugin": "^4.21.0",
    "@typescript-eslint/parser": "^4.21.0",
    "@vitejs/plugin-vue": "^1.2.1",
    "@vue/compiler-sfc": "^3.0.11",
    "@vue/eslint-config-typescript": "^7.0.0",
    "esbuild": "^0.9.7",
    "eslint": "^7.24.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-unused-imports": "^1.1.1",
    "eslint-plugin-vue": "^7.8.0",
    "pnpm": "^6.0.2",
    "prettier": "^2.2.1",
    "typescript": "^4.2.4",
    "vite": "^2.1.5",
    "vite-plugin-windicss": "^0.11.8",
    "windicss": "^2.5.13"
  }
}
