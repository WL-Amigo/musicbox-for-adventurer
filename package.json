{
  "name": "music-box-for-adventurer",
  "version": "0.1.0",
  "scripts": {
    "dev": "vite",
    "build": "pnpm build:polyfill && vue-tsc --noEmit && vite build",
    "build:ci": "pnpm prebuild:dl-assets && pnpm build:polyfill && vite build",
    "build:polyfill": "esbuild --bundle --outfile=./public/polyfill.js --minify ./polyfills/polyfill.js",
    "serve": "vite preview",
    "lint": "eslint './src/**/*.{ts,vue}'",
    "lint:fix": "eslint './src/**/*.{ts,vue}' --fix && prettier --write './src/**/*.{ts,vue}'",
    "preinstall": "npx only-allow pnpm",
    "prebuild": "test \"$CI\" = true && npx pnpm install --store=node_modules/.pnpm-store || echo skiping pnpm install",
    "prebuild:dl-assets": "esbuild ./scripts/FetchAndPlaceAssets.ts --platform=node --outdir=scripts --format=cjs && node ./scripts/FetchAndPlaceAssets.js",
    "pack-assets": "esbuild ./scripts/PackAssets.ts --platform=node --outdir=scripts --format=cjs && node ./scripts/PackAssets.js"
  },
  "dependencies": {
    "@headlessui/vue": "^1.2.0",
    "@popperjs/core": "^2.9.2",
    "@vueuse/core": "^5.0.3",
    "buffer": "^6.0.3",
    "chroma-js": "^2.1.2",
    "date-fns": "^2.22.1",
    "konva": "^7.2.5",
    "localforage": "^1.9.0",
    "music-metadata-browser": "^2.2.6",
    "nanoevents": "^6.0.0",
    "spark-md5": "^3.0.1",
    "vue": "^3.1.1",
    "zod": "^3.2.0"
  },
  "devDependencies": {
    "@types/chroma-js": "^2.1.3",
    "@types/fs-extra": "^9.0.11",
    "@types/license-checker": "^25.0.1",
    "@types/spark-md5": "^3.0.2",
    "@typescript-eslint/eslint-plugin": "^4.22.0",
    "@typescript-eslint/parser": "^4.22.0",
    "@vitejs/plugin-vue": "^1.2.3",
    "@vue/compiler-sfc": "^3.1.1",
    "@vue/eslint-config-typescript": "^7.0.0",
    "axios": "^0.21.1",
    "dotenv": "^10.0.0",
    "esbuild": "^0.12.9",
    "eslint": "^7.24.0",
    "eslint-config-prettier": "^8.2.0",
    "eslint-plugin-unused-imports": "^1.1.1",
    "eslint-plugin-vue": "^7.9.0",
    "fs-extra": "^10.0.0",
    "license-checker": "^25.0.1",
    "pnpm": "^8.15.5",
    "prettier": "^2.2.1",
    "typescript": "^4.3.4",
    "vite": "^2.3.8",
    "vite-plugin-html": "^2.0.7",
    "vite-plugin-pwa": "^0.8.1",
    "vite-plugin-windicss": "^1.0.4",
    "vue-tsc": "^0.2.0",
    "windicss": "^3.1.3"
  }
}
